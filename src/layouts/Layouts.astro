---
import '../styles/global.css';
import Navbar from '../components/Navbar.tsx';

const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="bg-red-500 text-white font-bold py-2 px-4 rounded h-screen w-screen flex flex-col justify-start items-center">
    <Navbar />
		<slot />
	</body>
</html>
