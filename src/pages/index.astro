---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Sistema de Gestión de Usuarios - Inicio">
    <main class="flex flex-col items-center justify-center min-h-[80vh]">
        <h1 class="text-4xl font-bold mb-8 text-center">
            Bienvenido al Sistema de Gestión de Usuarios
        </h1>

        <div class="relative w-full max-w-[300px] mx-auto">
            <img
                src="/favicon.svg"
                alt="Sistema de Gestión de Usuarios"
                class="w-full h-auto rounded-lg shadow-xl"
            />

            <div class="mt-8 text-center">
                <a
                    href="/create"
                    class="inline-block px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-lg transition-colors shadow-md"
                >
                    Gestionar Usuarios
                </a>
            </div>
        </div>
    </main>
</Layout>
