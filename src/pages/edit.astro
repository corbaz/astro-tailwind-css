---
import Layout from "../layouts/Layout.astro";
import UserEdit from "../components/UserEdit.tsx";

// Obtener el ID del par√°metro de consulta
const id = Astro.url.searchParams.get("id") ?? undefined;
---

<Layout title="Edit User">
    <main class="container mx-auto p-4">
        <h1 class="text-2xl font-bold mb-4 text-blue-400">Editar Usuario</h1>
        <UserEdit userId={id} client:load />
    </main>
</Layout>
