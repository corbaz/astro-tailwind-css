---
import Layout from "../layouts/Layout.astro";
import UserDelete from "../components/UserDelete.tsx";

// Obtener el ID del par√°metro de consulta
const id = Astro.url.searchParams.get("id") ?? undefined;
---

<Layout title="Delete User">
    <main class="container mx-auto p-4">
        <h1 class="text-2xl font-bold mb-4">Eliminar Usuario</h1>
        <UserDelete userId={id} client:load />
    </main>
</Layout>
